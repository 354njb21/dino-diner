<Page x:Class="PointOfSale.CustomizeBrontowurst"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomizeBrontowurst">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Click="OnHoldOnion" FontSize="35" Foreground="Gold" >Hold Onion</Button>
        <Button Click="OnHoldBun" Foreground="Tan" FontSize="35" Grid.Column="1">Hold Bun</Button>
        <Button Click="OnHoldPeppers" Foreground="OrangeRed" FontSize="35" Grid.Column="2">Hold Peppers</Button>
        <Button Click="OnDone" Foreground="Red" Background="Black" FontSize="35" Grid.Row="1" Grid.Column="1">Done</Button>
    </Grid>
</Page>
