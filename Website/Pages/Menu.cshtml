@page
@model Website.Pages.MenuModel
@using DinoDiner.Menu;
@{
    ViewData["Title"] = "Menu";
}

    <div class="container">
        <div class="menu">
            <h1>Menu</h1>

            <div class="combos">
                <h2>Cretaceous Combos</h2>

                @foreach (CretaceousCombo combo in Model.Combos)
                {
                    <div class="menu-item">
                        <h3>@combo.Description</h3>
                        <table>

                            <tbody>
                                <tr>
                                    <th>Size</th>
                                    <th>Price</th>
                                    <th>Calories</th>
                                </tr>

                                <tr>

                                    <td>Small</td>
                                    <td>@Model.ComboPriceBySize("small", combo)</td>
                                    <td>@combo.Calories</td>
                                </tr>
                                <tr>

                                    <td>Medium</td>
                                    <td>@Model.ComboPriceBySize("medium", combo)</td>
                                    <td>@combo.Calories</td>
                                </tr>
                                <tr>

                                    <td>Large</td>
                                    <td>@Model.ComboPriceBySize("large", combo)</td>
                                    <td>@combo.Calories</td>
                                </tr>



                            </tbody>
                        </table>

                        <h4>Ingredients:</h4>
                        @foreach (var item in combo.Ingredients)
                        {
                            <h5>@item</h5>
                        }
                    </div>
                }
            </div>

            <div class="entrees">
                <h2>Entrees</h2>

                @foreach (Entree entree in Model.Entrees)
                {
                    <div class="menu-item">
                        <h3>@entree.Description</h3>
                        <h4>Price: $@entree.Price</h4>
                        <h4>Calories: @entree.Calories</h4>
                        <h4>Ingredients: </h4>
                        @foreach (var item in entree.Ingredients)
                        {
                            <h5>@item</h5>
                        }
                    </div>
                }
            </div>


            <div class="sides">
                <h2>Sides</h2>

                @foreach (Side side in Model.Sides)
                {
            <div class="menu-item">
                <h3>@side.Description</h3>
                <table>
                    <tbody>
                        <tr>
                            <th>Size</th>
                            <th>Price</th>
                            <th>Calories</th>
                        </tr>
                        
                            <tr>
                                <td>Small</td>
                                <td>@Model.SidePriceBySize("small", side)</td>
                                <td>@side.Calories</td>
                            </tr>
                            <tr>
                                <td>Medium</td>
                                <td>@Model.SidePriceBySize("medium", side)</td>
                                <td>@side.Calories</td>
                            </tr>
                            <tr>
                                <td>Large</td>
                                <td>@Model.SidePriceBySize("large", side)</td>
                                <td>@side.Calories</td>
                            </tr>
                    </tbody>
                </table>
                
                <h4>Ingredients: </h4>
                @foreach (var item in side.Ingredients)
                {
                    <h5>@item</h5>
                }
            </div>
                }
            </div>

            <div class="drinks">
                <h2>Drinks</h2>

                @foreach (Drink drinks in Model.Drinks)
                {
                    <div class="menu-item">
                        <h3>@drinks.Description</h3>
                        <table>
                            <tbody>
                                <tr>
                                    <th>Size</th>
                                    <th>Price</th>
                                    <th>Calories</th>
                                </tr>
                                <tr>
                                    <td>Small</td>
                                    <td>@Model.DrinkPriceBySize("small", drinks)</td>
                                    <td>@drinks.Calories</td>
                                </tr>
                                <tr>
                                    <td>Medium</td>
                                    <td>@Model.DrinkPriceBySize("medium", drinks)</td>
                                    <td>@drinks.Calories</td>
                                </tr>
                                <tr>
                                    <td>Large</td>
                                    <td>@Model.DrinkPriceBySize("large", drinks)</td>
                                    <td>@drinks.Calories</td>
                                </tr>
                            </tbody>
                        </table>
                        
                        <h4>Ingredients: </h4>
                        @foreach (var item in drinks.Ingredients)
                        {
                            <h5>@item</h5>
                        }
                    </div>
                }
            </div>

        </div>





            <form method="post">

                <input type="text" name="search" id="search" value="@Model.search" />
                <input type="submit" value="Search & Filter" />


                <h3>Menu Category</h3>

                <label>
                    <input type="checkbox" name="menuCategory" value="Combo" checked="@Model.menuCategory.Contains("Combo")" />
                    Combo
                </label>
                <label>
                    <input type="checkbox" name="menuCategory" value="Entree" checked="@Model.menuCategory.Contains("Entree")" />
                    Entree
                </label>
                <label>
                    <input type="checkbox" name="menuCategory" value="Side" checked="@Model.menuCategory.Contains("Side")" />
                    Side
                </label>
                <label>
                    <input type="checkbox" name="menuCategory" value="Drink" checked="@Model.menuCategory.Contains("Drink")" />
                    Drink
                </label>
                <h3>Price</h3>
                <label>
                    <input type="number" step="0.1" name="minimumPrice" id="minimum-price" value="@Model.minimumPrice" />
                    Min
                </label>
                <label>
                    <input type="number" step="0.1" name="maximumPrice" id="maximum-price" value="@Model.maximumPrice" />
                    Max
                </label>

                <h3>Excluding Ingredients</h3>

                @foreach (string items in Model.PossibleIngredients)
                {

                    <label>
                        <input type="checkbox" name="SelectedIngredients" value="@items" />
                        @items
                    </label>
                }

            </form>

        </div>